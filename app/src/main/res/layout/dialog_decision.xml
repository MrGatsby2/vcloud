<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/space_20">


    <TextView
        android:id="@+id/dd_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIUBILITY_"
        android:textColor="@color/gray_9"
        android:textSize="@dimen/txt_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dd_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10"
        android:text="niubility_niubility_niubility_niubility_niubility_niubility_"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/txt_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_title" />

    <Button
        android:id="@+id/dd_btn_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15"
        android:background="@null"
        android:text="cancel"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/txt_20"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dd_btn_right"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content" />

    <Button
        android:id="@+id/dd_btn_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_15"
        android:background="@null"
        android:text="OK"
        android:textColor="@color/teal_7"
        android:textSize="@dimen/txt_20"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/dd_btn_left"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dd_tv_content" />

</androidx.constraintlayout.widget.ConstraintLayout>